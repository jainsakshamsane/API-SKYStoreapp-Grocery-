<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:gravity="center"
    >

    <!-- CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="330dp"

        android:layout_margin="5dp">

        <!-- LinearLayout inside CardView for vertical arrangement -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ImageView for the image in the center -->
            <ImageView
                android:id="@+id/image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_category_24" />

            <!-- TextView for the name -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:text="John Doe"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
           >
                <TextView
                    android:id="@+id/minusButton"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="3dp"
                    android:background="@drawable/rectangle_background"

                    android:text="-"
                    android:textColor="#2E6E4F"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/quantityTextView"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"


                    android:gravity="center"
                    android:padding="3dp"
                    android:text="1"
                    android:textColor="#2E6E4F"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/plusButton"

                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="3dp"
                    android:background="@drawable/rectangle_background"

                    android:text="+"
                    android:textColor="#2E6E4F"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <!-- TextView for the title -->
                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Title Here"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Rs"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    android:layout_gravity="center">
            <TextView
                android:id="@+id/addbutton"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:background="@drawable/rectangle_background"
                android:gravity="center"
                android:padding="3dp"


                android:text="Add"
                android:textColor="#2E6E4F"
                android:textStyle="bold"></TextView>
    <!-- Your existing layout with TextView for rating -->

    <TextView
        android:id="@+id/rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:background="@drawable/rectangle_background"
        android:backgroundTint="#EFC95C"
        android:gravity="center"
        android:padding="3dp"
        android:text=""
        android:textColor="#2E6E4F"
        android:textStyle="bold" />

</LinearLayout>
        </LinearLayout>

        <!-- RelativeLayout for the image at the bottom right corner -->


    </androidx.cardview.widget.CardView>

</RelativeLayout>
