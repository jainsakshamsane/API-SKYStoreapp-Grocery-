<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Card 1 -->
        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <!-- Your content for Card 1 -->
            <ImageView
                android:id="@+id/card1"

                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/electronics" />

            <TextView
                android:id="@+id/electronics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:text="Electronics"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>

        <!-- Card 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <!-- Your content for Card 2 -->
            <ImageView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/ele" />

            <TextView
                android:id="@+id/jewelry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jewelry"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"/>
        </androidx.cardview.widget.CardView>

        <!-- Card 3 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <!-- Your content for Card 3 -->
            <ImageView
                android:id="@+id/card3"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@drawable/men" />

            <TextView
                android:id="@+id/Mens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Men's Clothing"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"/>
        </androidx.cardview.widget.CardView>

        <!-- Card 4 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <!-- Your content for Card 4 -->
            <ImageView
                android:id="@+id/card4"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/women" />

            <TextView
                android:id="@+id/women"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Women's Clothing"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginTop="80dp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
